/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 加载状态 */
.loading-container,
.generating-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #e4e7ed;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #fff;
}

/* 等待页面静态样式 */
.icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin-bottom: 40rpx;
}

.wait-icon {
  font-size: 120rpx;
  line-height: 1;
}

.generating-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 15rpx;
}

.generating-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.generating-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 公众号二维码区域 */
.qrcode-section {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
  padding: 40rpx;
}

.qrcode-title {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 30rpx;
  text-align: center;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.qrcode-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 报告容器 */
.report-container {
  padding: 30rpx;
}

/* 基础信息卡片 */
.info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.info-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 20rpx;
}

.gender {
  font-size: 24rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.3);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  min-width: 160rpx;
}

.value {
  font-size: 28rpx;
  color: #fff;
}

/* 四柱卡片 */
.bazi-card,
.wuxing-card,
.content-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.pillars {
  display: flex;
  justify-content: space-between;
}

.pillar {
  flex: 1;
  text-align: center;
}

.pillar-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.pillar-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  letter-spacing: 4rpx;
}

/* 五行分析 */
.wuxing-list {
  margin-bottom: 20rpx;
}

.wuxing-item {
  margin-bottom: 25rpx;
}

.wuxing-item:last-child {
  margin-bottom: 0;
}

.wuxing-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.wuxing-name {
  font-size: 28rpx;
  font-weight: bold;
}

.wuxing-name.wood { color: #67c23a; }
.wuxing-name.fire { color: #f56c6c; }
.wuxing-name.earth { color: #e6a23c; }
.wuxing-name.metal { color: #909399; }
.wuxing-name.water { color: #409eff; }

.wuxing-score {
  font-size: 28rpx;
  color: #666;
}

.wuxing-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.wuxing-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.wuxing-fill.wood { background: #67c23a; }
.wuxing-fill.fire { background: #f56c6c; }
.wuxing-fill.earth { background: #e6a23c; }
.wuxing-fill.metal { background: #909399; }
.wuxing-fill.water { background: #409eff; }

.wuxing-summary {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
  text-align: center;
}

.wuxing-summary text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
}

/* 详细内容 */
.rich-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

/* 底部按钮 */
.actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn:not(.primary) {
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.action-btn.full-width {
  flex: none;
  width: 100%;
}

/* 兑换码弹窗 */
.voucher-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voucher-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.voucher-modal-content {
  position: relative;
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  z-index: 1001;
}

.voucher-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.voucher-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.voucher-modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.voucher-modal-body {
  padding: 40rpx 30rpx;
}

.voucher-modal-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}

.voucher-input-group {
  margin-bottom: 20rpx;
}

.voucher-input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.voucher-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.voucher-input:focus {
  border-color: #667eea;
}

.voucher-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-top: 20rpx;
}

.voucher-modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 40rpx;
}

.voucher-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voucher-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.voucher-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.voucher-btn.confirm[disabled] {
  opacity: 0.6;
}
