/* pages/history/history.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.header {
  padding: 40rpx 20rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 50rpx;
}

.empty-btn {
  background: #fff;
  color: #667eea;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 报告列表 */
.report-list {
  padding-bottom: 40rpx;
}

/* 报告卡片 */
.report-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.name-gender {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.gender {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 状态标签 */
.status-badge {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 10;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-badge.completed {
  background: #e6f7e6;
  color: #52c41a;
}

.status-badge.incomplete {
  background: #f5f5f5;
  color: #999;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.label {
  color: #999;
  min-width: 140rpx;
}

.value {
  color: #333;
  flex: 1;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.bazi-preview {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: bold;
}
