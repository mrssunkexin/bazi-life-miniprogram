/* pages/month-calendar/month-calendar.wxss */
.month-calendar-container {
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 0;
}

/* ========== 顶部标题栏 ========== */
.top-header {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.logo-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.logo-icon {
  font-size: 40rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #d63031;
}

/* ========== 年月导航栏 ========== */
.year-month-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.year-month-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.btn-today,
.btn-choose {
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background-color: #FFF9C4;
  color: #333;
}

.btn-today {
  background-color: #667eea;
  color: #fff;
}

/* ========== 月份标签 ========== */
.month-label-section {
  padding: 15rpx 30rpx;
  background-color: #fff;
}

.month-label {
  display: inline-block;
  padding: 6rpx 24rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  font-size: 26rpx;
  color: #666;
}

/* ========== 星期标题行 ========== */
.weekday-header {
  display: flex;
  justify-content: space-around;
  padding: 15rpx 20rpx;
  margin: 10rpx 20rpx 0;
  background-color: #fff;
  border-radius: 12rpx 12rpx 0 0;
}

.weekday-cell {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

/* ========== 日历网格 ========== */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx;
  gap: 0;
  background-color: transparent;
  margin: 0 20rpx 20rpx;
  border-radius: 0 0 12rpx 12rpx;
}

.day-cell {
  width: calc(100% / 7);
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: transparent;
  border-radius: 0;
  box-sizing: border-box;
  position: relative;
  padding: 10rpx 4rpx;
  margin: 0;
}

.day-empty {
  background-color: transparent;
}

/* ========== 日期单元格内容 ========== */
.jieqi-tag {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: auto;
  font-size: 20rpx;
  color: #F44336;
  background-color: transparent;
  padding: 0;
  border-radius: 0;
}

.solar-num {
  font-size: 30rpx;
  color: #333;
}

.lunar-day {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
}

.liuri-text {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 4rpx;
}

/* ========== 今日高亮 ========== */
.day-today {
  background-color: #FFF3E0 !important;
  border: 2rpx solid #FF9800;
  border-radius: 12rpx;
}

.day-today .lunar-day {
  font-weight: bold;
  color: #d63031;
}

.day-today .ganzhi-char,
.day-today .solar-num {
  color: #d63031;
}
