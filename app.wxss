/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 通用容器 */
.container {
  box-sizing: border-box;
}

/* 通用按钮样式重置 */
button {
  padding: 0;
  margin: 0;
  font-size: inherit;
  line-height: inherit;
}

button::after {
  border: none;
}

/* 通用输入框样式 */
input {
  outline: none;
}

/* 通用文本样式 */
text {
  font-size: inherit;
  line-height: inherit;
}

/* 通用视图样式 */
view {
  box-sizing: border-box;
}
